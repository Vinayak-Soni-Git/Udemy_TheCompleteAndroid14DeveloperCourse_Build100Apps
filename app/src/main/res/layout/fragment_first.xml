        android:text="@string/firstFragment" />

    <Button
        android:id="@+id/firstFragmenetButton"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clickMe" />


</FrameLayout>